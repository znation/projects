<Window x:Class="stockmarket.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stockmarket Analyzer" Loaded="Window_Loaded" WindowState="Maximized">
    <WrapPanel Name="Panel">
        <TextBox FontFamily="Consolas" Name="Results" />
        <TextBox FontFamily="Consolas" Name="TradeWeight" />
        <Canvas Name="GraphCanvas">
            <Image Name="PriceGraph" Stretch="None" Canvas.Top="0" Canvas.Left="0" Panel.ZIndex="0"/>
            <Image Name="TradeGraph" Stretch="None" Canvas.Top="0" Canvas.Left="0" Panel.ZIndex="1"/>
        </Canvas>
    </WrapPanel>
    
</Window>
